# データベース接続設定
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=password
DB_NAME=blog_benchmark
DB_CHARSET=utf8mb4
DB_PARSE_TIME=True
DB_LOC=Local

# コネクションプール設定
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_CONN_MAX_LIFETIME=3600

# ベンチマーク設定
BENCHMARK_ITERATIONS=1000
BENCHMARK_CONCURRENCY=10
BENCHMARK_DATASET_SIZE=10000

# ロギング設定
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# アプリケーション設定
APP_ENV=development
APP_DEBUG=true
APP_PORT=8080

# テスト用データベース   (for testing)
TEST_DB_HOST=localhost
TEST_DB_PORT=3307
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password
TEST_DB_NAME=blog_benchmark_test

# 結果出力設定
RESULTS_DIR=./results
EXPORT_FORMAT=json,csv